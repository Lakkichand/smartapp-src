<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_item_selector"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_categories_image"
                android:layout_width="@dimen/game_iconSize"
                android:layout_height="@dimen/game_iconSize"
                android:layout_margin="5dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/item_categories_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:maxLines="2"
                android:text="高德地图"
                android:textColor="#242424"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
            android:layout_marginRight="@dimen/activity_layout_marginLeftRight"
            android:layout_marginTop="@dimen/main_game_info_mar"
            android:background="@drawable/personal_login_line_heng" />

        <TextView
            android:id="@+id/item_categories_intro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_layout_marginLeftRight"
            android:layout_marginRight="@dimen/activity_layout_marginLeftRight"
            android:layout_marginTop="10dip"
            android:lines="2"
            android:text="百度浏览器，百度安全管"
            android:textColor="#909090"
            android:textSize="12.5sp" />
    </LinearLayout>

</LinearLayout>