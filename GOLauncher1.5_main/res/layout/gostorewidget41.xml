<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.ggheart.apps.gowidget.gostorewidget.GoStoreWidget41
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center">
    <RelativeLayout 
        android:id="@+id/gostorewidget41"
    	android:layout_width="wrap_content"
    	android:layout_height="57dp"
    	android:layout_gravity="center"
    	android:background="@drawable/gostorewidget41_bg" >
    	
        <TextView 
            android:id="@+id/gostore_widget41_img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:background="@drawable/gostorewidget41_icon"/>
        
        <!-- 用一个透明的view做一个间隔 -->
        <ImageView 
            android:id="@+id/gostore_widget41_temp_imageview"
            android:layout_width="1dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    
    	<ImageButton 
        	android:id="@+id/gostore_widget41_more"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_toLeftOf="@id/gostore_widget41_temp_imageview"
        	android:layout_centerVertical="true"
        	android:background="@drawable/gostorewidget41_more_selector"
        	/>
    
    	<com.jiubang.ggheart.apps.gowidget.gostorewidget.GoStoreWidget41GridView 
    	    android:id="@+id/gostorewidget41_recommand_area"
        	android:layout_width="wrap_content"
        	android:layout_height="43dp"
        	android:layout_toLeftOf="@id/gostore_widget41_more"
        	android:layout_toRightOf="@id/gostore_widget41_img_icon"
        	android:layout_marginTop="4dp"
        	android:layout_marginRight="4dp"
        	android:layout_marginLeft="5dp"
        	android:numColumns="4"
        	android:listSelector="@android:color/transparent"
        	android:scrollbars="none"
        	android:fadingEdge="none"
         	android:background="@drawable/gostorewidget41_recommend_area"
        	/>

	</RelativeLayout>

</com.jiubang.ggheart.apps.gowidget.gostorewidget.GoStoreWidget41>